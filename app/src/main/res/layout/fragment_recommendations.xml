<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="372dp"
        android:layout_height="679dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498"> <!-- Apply the border drawable here -->

        <TextView
            android:id="@+id/ArticlesTab"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/article_background"
            android:gravity="center"
            android:text="Articles"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/BooksTab"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:background="@drawable/books_background"
            android:gravity="center"
            android:text="Books"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/MoviesTab"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:background="@drawable/movies_background"
            android:gravity="center"
            android:text="Movies"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/MusicTab"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:background="@drawable/music_background"
            android:gravity="center"
            android:text="Music"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/ShortFilmTab"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:background="@drawable/shortfilms_background"
            android:gravity="center"
            android:text="Short Films"
            android:textColor="#ffffff"/>


        <!--</FrameLayout>-->
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>